<link rel="stylesheet" href="stylesheets/signup.css">
{{#if alertMsg}}
<div>
    <p>{{alertMsg}}</p>
</div>
{{/if}}
<div class="main">
    <div class="c1">
        <form action="/signup" method="post">
            <div class="signup">
                <h1 class="signhead">Sign Up</h1>
            </div>
            <div class="namedv">
                <h2 class="com name">Name</h2>
                <input type="text" placeholder="Enter Name" class="inpcom" name="userName" required />
            </div>
            <div class="gmaildv">
                <h2 class="com gmail">Gmail</h2>
                <input type="text" placeholder="Enter Gmail" class="inpcom" name="email" required />
            </div>
            <div class="passdiv">
                <h2 class="com pass">Password</h2>
                <input type="password" placeholder="Enter Password" class="inpcom" name="password" required />
            </div>
            <div class="phndiv">
                <h2 class="com phn">Phone</h2>
                <input type="text" placeholder="Enter Phone Number" class="inpcom" name="phoneNumber" required />
            </div>
            <div class="expdiv">
                <h2 class="com exp">Work Status</h2>
                <div class="freshworker">
                    <input type="radio" id="fresher" name="workStatus" value="fresher" required>
                    <label for="fresher">Fresher</label>
                    <input type="radio" id="worker" name="workStatus" value="worker" required>
                    <label for="worker">Worker</label>
                </div>
            </div>
            <div class="subbtn"><button class="btn1">Submit</button></div>
        </form>
    </div>
</div>