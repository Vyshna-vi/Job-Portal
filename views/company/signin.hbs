<link rel="stylesheet" href="/stylesheets/cmpsignin.css" />

<section class="forms-section">
    <h1 class="section-title"></h1>
    <div class="forms">
        <div class="form-wrapper is-active">
            <button type="button" class="switcher switcher-login">
                Login
                <span class="underline"></span>
            </button>
            <form class="form form-login" method="">
                <fieldset>
                    <legend>Please, enter your email and password for login.</legend>
                    <div class="input-block">
                        <label for="login-email">E-mail</label>
                        <input id="login-email" type="email" name="lemail" required />
                    </div>
                    <div class="input-block">
                        <label for="login-password">Password</label>
                        <input id="login-password" type="password" name="lpassword" required />
                    </div>
                </fieldset>
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
        <div class="form-wrapper">
            <button type="button" class="switcher switcher-signup">
                Sign Up
                <span class="underline"></span>
            </button>
            <form class="form form-signup"  action="/company/dosignup" method="post">
                <fieldset>
                    <legend>
                        Please, enter your email, password and password confirmation for
                        sign up.
                    </legend>
                    <div class="input-block">
                        <label for="signup-name">Name</label>
                        <input type="text" id="signup-name" name="compName" required>
                    </div>
                    <div class="input-block">
                        <label for="signup-email">E-mail</label>
                        <input id="signup-email" type="email" name="email" required />
                    </div>
                    <div class="input-block">
                        <label for="signup-password">Password</label>
                        <input id="signup-password" type="password" name="password" required />
                    </div>
                    <div class="input-block">
                        <label for="signup-password-confirm">Confirm password</label>
                        <input id="signup-password-confirm" type="password" name="password" required />
                    </div>
                    <div class="input-block">
                        <label for="signup-phnno">Phone Number</label>
                        <input id="signup-phnno" type="number" name="phnNumber" required>
                    </div>
                </fieldset>
                <button type="submit" class="btn-signup">Continue</button>
            </form>
        </div>
    </div>
</section>
<script src="/javascripts/compsignin.js"></script>