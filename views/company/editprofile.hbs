<h1>Edit profile</h1>
<form action="/company/editprofile" method="post" enctype="multipart/form-data">
    <input type="file" name="image" id="" placeholder="company image" required="true" accept=".jpg">
    <h2>Company Name</h2>
    <input type="text" value="{{profile.compName}}" name="compName">
    <h2>Gmail</h2>
    <input type="text" value="{{profile.email}}" name="email">
    <h2>Phone</h2>
    <input type="text" value="{{profile.phnNumber}}" name="phnNumber">
    <h2>About</h2>
    <input type="text" value="{{profile.about}}" name="about">
    <h2>Address</h2>
    <input type="text" value="{{profile.address}}" name="address">
    <h2>Mission</h2>
    <input type="text" value="{{profile.mission}}" name="mission">
    <h2>vision</h2>
    <input type="text" value="{{profile.vision}}" name="vision"><br>
    <button>save</button>
</form>
<a href="/company/cmphomepage">Back</a>